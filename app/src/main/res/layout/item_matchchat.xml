<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/matchImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/ic_person" />

    <TextView
        android:id="@+id/matchNickTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/font1"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/matchImageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/matchImageView"
        tools:text="닉네임" />

    <TextView
        android:id="@+id/matchChatTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/font1"
        android:gravity="center|start"
        app:layout_constraintBottom_toBottomOf="@id/matchImageView"
        app:layout_constraintLeft_toLeftOf="@id/matchNickTextView"
        app:layout_constraintRight_toRightOf="@id/matchNickTextView"
        app:layout_constraintTop_toBottomOf="@id/matchNickTextView"
        tools:text="안녕하세요" />


</androidx.constraintlayout.widget.ConstraintLayout>