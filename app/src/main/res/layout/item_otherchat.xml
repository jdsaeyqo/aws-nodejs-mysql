<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/otherImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/otherChatMessageTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/font1"
        app:layout_constraintBottom_toBottomOf="@id/otherImage"
        app:layout_constraintLeft_toRightOf="@id/otherImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="dkdkdk" />

    <TextView
        android:id="@+id/otherchattime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:fontFamily="@font/font1"
        app:layout_constraintLeft_toLeftOf="@id/otherChatMessageTextView"
        app:layout_constraintTop_toBottomOf="@id/otherChatMessageTextView"
        tools:text="12:34" />

</androidx.constraintlayout.widget.ConstraintLayout>